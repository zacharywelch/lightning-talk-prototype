<% wrap_layout :layout do %>
  <header class='inset-header dark profile'>
    <div class='container-fluid contain clearfix'>
      <div class='media contain'>
        <a class='media-left pad1r' href='#fakelink'>
          <%= image_tag 'batman.jpg', class: 'img-rounded', width: 130 %>
        </a>
        <div class='media-body pad1l'>
          <h1>
            Bruce Wayne<span class='badge fill-lighten0 dark small pad1x round inline'>speaker</span>
          </h1>
          <p class='lead quiet'>Product designer at Bluth Company</p>
          <ul class='stats'>
            <li class='inline'>
              <a href='/member.html' class='block pad2r text-default'>
                <strong class='block space-bottom0'>15</strong>
                <small class='quiet'>Talks</small>                
              </a>
            </li>
            <li class='inline'>
              <a href='/followers.html' class='block pad2x keyline-left text-default'>
                <strong class='block space-bottom0'>26</strong>
                <small class='quiet'>Followers</small>
              </a>
            </li>
            <li class='inline'>
              <a href='/following.html' class='block pad2x keyline-left text-default'>
                <strong class='block space-bottom0'>5</strong>
                <small class='quiet'>Following</small>
              </a>
            </li>
            <li class='inline'>
              <a href='/favorites.html' class='block pad2x keyline-left text-default'>
                <strong class='block space-bottom0'>33</strong>
                <small class='quiet'>Favorites</small>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <ul class='actions'>
        <li>
          <% link_to '#fakelink', class: 'btn btn-primary' do %>
            <i class='icon icon-plus pad0r' style='margin-top: -2px;'></i>Follow
          <% end %>
        </li>
      </ul>
    </div>
  </header>

  <div class='container-fluid contain'>
    <nav class='space-bottom4 dark'>
      <%= tab_link 'Talks', '/member.html' %>
      <%= tab_link 'Favorites', '/favorites.html' %>
      <%= tab_link 'Activity', '/activity.html' %>
      <%= tab_link 'Followers', '/followers.html' %>
      <%= tab_link 'Following', '/following.html' %>      
    </nav>

    <%= yield %>
  </div>
<% end %>